<!-- Modal -->

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><h2> You are talking to<i> <%= chatroom.plant.user.nickname %></i></h2> <%= @chatroom.name %></h5>
        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
    <div id="messages" data-chatroom-id="<%= chatroom.id %>">

      <% chatroom.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>

    <div class="modal-form">
      <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Send Message#{@chatroom.name}" %>
      <%= button_tag type: 'submit', class: "button postfix" do %>
