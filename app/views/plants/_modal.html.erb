<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  chat
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><h2> You are talking to<i> <%= chatroom.plant.user.nickname %></i></h2> <%= @chatroom.name %></h5>
        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
    <div id="messages" data-chatroom-id="<%= chatroom.id %>">

      <% chatroom.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>

    </div>

      <%= simple_form_for [ @chatroom, @message ], remote: true, class: "ajax-request" do |f| %>
      <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
      <%= f.submit :send ,class: "btn btn-primary" %>
      <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>