<div class="container mt-2">
<h2>My chats</h2>
  <div class="row d-flex">

    <ul class="list-group">
      <li class="list-group-item active list-group-item-action d-flex justify-content-between align-items-center">Interested in my plant</li>
      <% @plants.each do |plant| %>
        <% if current_user.id == plant.user_id %>
            <% @chatrooms.each do |chatroom| %>
            <% if chatroom.messages.empty? == false %>
                <% if chatroom.plant == plant %>
                  <%= link_to chatroom_path(chatroom) do %>
                    <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                      #<%= chatroom.other_person(current_user).nickname %> - <%= plant.name %>
                    </li>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <li class="list-group-item active list-group-item-action d-flex justify-content-between align-items-center">Plants I'm interested in</li>
      <% @chatrooms.each do |chatroom| %>
        <% if chatroom.messages.empty? == false %>
          <% if current_user.id == chatroom.user_id %>
            <%= link_to chatroom_path(chatroom) do %>
              <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
               #<%= chatroom.plant.user.nickname %> - <%= chatroom.plant.name %> <%= chatroom.id %>

               <!--  <span class="badge badge-primary badge-pill">1</span> -->
              </li>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

    </ul>
  </div>
</div>

